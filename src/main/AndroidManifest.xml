<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="faz.ie.partyapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo3"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity android:name=".Settings"></activity>
        <activity android:name=".chooseToHostOrAttend" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginORSignup"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginInformationEntry"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignUpInformationEntry"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PartyInformation"
            android:screenOrientation="portrait" />
        <activity android:name=".ProfilePictures" />
        <activity android:name=".TestActivity" />
        <activity android:name=".UserProfile" />
    </application>

</manifest>